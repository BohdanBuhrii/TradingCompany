<Window x:Class="TradingCompanyWPF.Shared.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradingCompanyWPF.Shared"
        mc:Ignorable="d"
        Title="AuthenticationWindow" Height="450" Width="800">
    <Grid>
        <PasswordBox x:Name="PasswordTB" HorizontalAlignment="Center" Height="23" Margin="0,183,0,0" VerticalAlignment="Top" Width="234"/>
        <TextBox x:Name="EmailTB" HorizontalAlignment="Center" Height="23" Margin="0,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234"/>
        <Label Content="Email" HorizontalAlignment="Left" Height="26" Margin="215,142,0,0" VerticalAlignment="Top" Width="44"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="23" Margin="196,183,0,0" VerticalAlignment="Top" Width="63"/>
        <Button x:Name="LogInBtn" Content="Log In" HorizontalAlignment="Left" Height="24" Margin="415,232,0,0" VerticalAlignment="Top" Width="102" Click="LogInBtn_Click"/>

    </Grid>
</Window>
